<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search"
    android:background="@drawable/darkposter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <com.google.android.gms.ads.AdView
                   xmlns:ads="http://schemas.android.com/apk/res-auto"
                   android:id="@+id/adView1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   ads:adSize="BANNER"
                   ads:adUnitId="ca-app-pub-9511260428304528/9674390751">
               </com.google.android.gms.ads.AdView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/pnr_btn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:drawableLeft="@drawable/ic_logoo"
            android:paddingLeft="16dp"
            android:text="Search Using PNR"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="#02457A" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_logoo"
            android:paddingRight="16dp"
            android:text="Search"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/mybutton"
            app:backgroundTint="#02457A"
            android:layout_gravity="center"/>

    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="211dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:layout_marginBottom="454dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/trainloader" />

    <ImageView
        android:layout_width="113dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="146dp"
        android:layout_marginEnd="151dp"
        android:layout_marginRight="151dp"
        android:layout_marginBottom="317dp"
        android:src="@drawable/trainlocation" />

    <AutoCompleteTextView
        android:id="@+id/from"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/edittext"
        android:completionThreshold="1"
        android:gravity="center"
        android:hint="From Destinantion"
        android:inputType="text"
        android:padding="5dip"
        android:popupBackground="#154c79"
        android:textColor="@color/black"
        android:textColorHint="#808080" />

    <AutoCompleteTextView
        android:id="@+id/to"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="259dp"
        android:background="@drawable/edittext"
        android:gravity="center"
        android:hint="To Destinantion"
        android:inputType="text"
        android:padding="5dip"
        android:popupBackground="#154c79"
        android:textColor="@color/black"
        android:textColorHint="#808080" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9511260428304528/9674390751">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>